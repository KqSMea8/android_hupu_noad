<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/upload_progress_layout" android:background="#4e000000" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ImageView android:id="@id/img_progress" android:background="@drawable/download" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" />
        <TextView android:textSize="10.0sp" android:textColor="#ffffffff" android:gravity="center" android:id="@id/img_progress_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0 %" android:layout_centerInParent="true" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/upload_fail_layout" android:background="#4e000000" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <TextView android:textSize="15.0sp" android:textColor="#ffffffff" android:gravity="center" android:id="@id/error" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上传失败\n请点击重试" android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>